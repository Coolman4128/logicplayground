<views:LogicBlockBase xmlns="https://github.com/avaloniaui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:vm="using:LogicPlayground.ViewModels.LogicBlocks.Functions"
                     xmlns:views="using:LogicPlayground.Views"
                     x:Class="LogicPlayground.Views.MathFunction"
                     x:DataType="vm:MathFunctionViewModel"
                     Width="{Binding BlockWidth}" Height="{Binding BlockHeight}">
    
    <!-- Only the middle content is defined here -->
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="{Binding FunctionType}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="14" TextWrapping="Wrap"/>
        <TextBlock Text="Math" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Opacity="0.7"/>
        <TextBlock Text="{Binding Result, StringFormat=F2}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="11" Margin="0,4,0,0" FontWeight="Bold"/>
    </StackPanel>

</views:LogicBlockBase>
