<views:LogicBlockBase xmlns="https://github.com/avaloniaui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:vm="using:LogicPlayground.ViewModels.LogicBlocks.Functions"
                     xmlns:views="using:LogicPlayground.Views"
                     x:Class="LogicPlayground.Views.LogicGateFunction"
                     x:DataType="vm:LogicGateFunctionViewModel"
                     Width="{Binding BlockWidth}" Height="{Binding BlockHeight}">
    
    <!-- Only the middle content is defined here -->
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="{Binding GateType}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16" TextWrapping="Wrap"/>
        <TextBlock Text="Gate" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Opacity="0.7"/>
    </StackPanel>

</views:LogicBlockBase>
